<style>
body {
    margin: 0;
    padding: 0;
    font-family: 'Arial', sans-serif;
    background-color: #121212;
    color: #fff;
    display: flex;
}

/* Dashboard Layout */
.dashboard-container {
    display: flex;
    width: 100%;
}

/* Sidebar */
.sidebar {
    width: 180px;  /* Reduced from 220px */
    background-color: #181818;
    padding: 15px;
    height: 100vh;
}

.sidebar h2 {
    text-transform: uppercase;
    font-size: 16px;
    margin-bottom: 15px;
    color: #ccc;
}

.sidebar ul {
    list-style: none;
    padding: 0;
}

.sidebar ul li {
    margin: 10px 0;
}

.sidebar ul li a {
    color: #999;
    text-decoration: none;
    font-size: 14px;
    display: block;
    padding: 8px;
    transition: 0.3s;
}

.sidebar ul li a:hover,
.sidebar ul li a.active {
    color: #00ff88;
    font-weight: bold;
}

/* Main Content - Expanded Width */
.main-content {
    flex: 2;  /* Increased to take more space */
    padding: 40px;
}

/* Adjusted Headers */
.main-content h3 {
    font-size: 16px;
    color: #aaa;
}

.main-content h1 {
    font-size: 28px;
    margin-bottom: 15px;
}

/* Button */
.add-task {
    background-color: #ff4b5c;
    color: white;
    padding: 10px 15px;
    border: none;
    cursor: pointer;
    font-weight: bold;
    border-radius: 6px;
    margin-bottom: 20px;
}

.add-task:hover {
    opacity: 0.8;
}

/* Task Group */
.task-group {
    margin-bottom: 20px;
}

.task-header {
    background: #222;
    padding: 12px;
    border-radius: 10px;
    font-size: 18px;
    font-weight: bold;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

/* Task Cards */
.task-card {
    background: #1e1e1e;
    padding: 15px;
    margin-top: 10px;
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.task-card h3 {
    margin: 0;
    font-size: 16px;
}

.task-card p {
    margin: 5px 0;
    font-size: 14px;
    color: #bbb;
}

.task-date {
    color: #999;
    font-size: 14px;
}

/* User Profile - Reduced Width */
.user-profile {
    width: 200px; /* Reduced from 250px */
    background-color: #181818;
    padding: 15px;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.profile-info {
    text-align: center;
    margin-bottom: 20px;
}

.profile-info img {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    background: #ff4b5c;
    padding: 5px;
}

.profile-info h3 {
    font-size: 14px;
    margin-top: 10px;
}

/* Task Stats */
.task-stats p {
    display: flex;
    justify-content: space-between;
    width: 100%;
    margin: 5px 0;
    font-size: 14px;
}

.blue-bar {
    display: inline-block;
    width: 10px;
    height: 10px;
    background: blue;
    margin-right: 5px;
}

.green-bar {
    display: inline-block;
    width: 10px;
    height: 10px;
    background: green;
    margin-right: 5px;
}

.red-bar {
    display: inline-block;
    width: 10px;
    height: 10px;
    background: red;
    margin-right: 5px;
}
</style>
